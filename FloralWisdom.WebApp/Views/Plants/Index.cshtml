@model IEnumerable<FloralWisdom.Models.Entities.Plant>

@{
    ViewData["Title"] = "Index";
}

<section class="py-3">
    <div class="container-lg">
        <div class="row">
            <div class="col-md-12">
                <div class="banner-blocks">
                    <div class="banner-ad d-flex align-items-center large bg-info block-1" style="background: url('images/flower-banner.jpg') no-repeat; background-size: cover;">
                        <div class="banner-content p-5">
                            <div class="row text-light d-flex align-items-center justify-content-between my-4">
                                <h2 class="banner-title text-light">Plants</h2>
                                <a class="btn btn-primary" asp-action="Create">Create New</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="latest-blog" class="pb-4">
    <div class="container-lg">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <article class="post-item card border-0 shadow-sm p-3">
                        <div class="card-body">
                            <div class="post-header">
                                <h3 class="post-title">
                                    Name: @Html.DisplayFor(modelItem => item.Name)
                                </h3>
                                <p>
                                    Scientific Name: @Html.DisplayFor(modelItem => item.ScientificName)
                                </p>
                                <p>
                                    Description: @Html.DisplayFor(modelItem => item.Description)
                                </p>
                                <p>
                                    Watering Frequency: @Html.DisplayFor(modelItem => item.WateringFrequency)
                                </p>
                                <p>
                                    Sunlight Requirement: @Html.DisplayFor(modelItem => item.SunlightRequirement)
                                </p>
                            </div>
                        </div>
                        <div class="btn">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>
