@model IEnumerable<FloralWisdom.Models.Entities.UserRequest>

@{
    ViewData["Title"] = "Index";
}

<section id="latest-blog" class="pb-4">
    <div class="container-lg">
        <div class="row">
            <div class="section-header d-flex align-items-center justify-content-between my-4">
                <h2 class="section-title">User Requests</h2>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <article class="post-item card border-0 shadow-sm p-3">
                        <div class="card-body">

                            <div class="post-header">
                                <h3 class="post-title">
                                    Name: @Html.DisplayFor(modelItem => item.Name)
                                </h3>
                                <p>
                                    Work Hours: @Html.DisplayFor(modelItem => item.WorkHours)
                                </p>
                                <p>
                                    Plant Type: @Html.DisplayFor(modelItem => item.PlantType)
                                </p>
                                <p>
                                    Prefered Colour: @Html.DisplayFor(modelItem => item.Colour)
                                </p>
                                <p>
                                    User Id: @Html.DisplayFor(modelItem => item.User.Id)
                                </p>
                            </div>
                        </div>
                        <div class="btn">
                            <a mt-2 mb-2 asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a mt-2 mb-2 asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a mt-2 mb-2 asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>