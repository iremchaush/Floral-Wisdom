@model IEnumerable<FloralWisdom.Models.Entities.CareReminder>

@{
    ViewData["Title"] = "Index";
}

<section id="latest-blog" class="pb-4">
    <div class="container-lg">
        <div class="row">
            <div class="section-header d-flex align-items-center justify-content-between my-4">
                <h2 class="section-title">Care Reminders</h2>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <article class="post-item card border-0 shadow-sm p-3">
                        <div class="card-body">

                            <div class="post-header">
                                <h3 class="post-title">
                                    @Html.DisplayFor(modelItem => item.Remindertype)
                                </h3>
                                <div class="meta-date">
                                    <svg width="16" height="16"><use xlink:href="#calendar"></use></svg>
                                    Due Date: @Html.DisplayFor(modelItem => item.NextDueDate)
                                </div>
                                <p>
                                    Plant Id: @Html.DisplayFor(modelItem => item.Plant.Id)
                                </p>
                            </div>
                        </div>
                        <div class="btn">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>